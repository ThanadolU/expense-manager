<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:text="Home Fragment"-->
<!--        android:textSize="36sp"-->
<!--        android:textColor="@color/teal_200"-->
<!--        android:gravity="center" />-->

    <View
        android:id="@+id/homeView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/imageGlobal"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/global" />

    <TextView
        android:id="@+id/allBanks"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:text="All Banks"
        android:textColor="@color/black"
        android:textSize="20sp" />

<!--    <ScrollView-->
<!--        android:id="@+id/homeScroll"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="560dp"-->
<!--        android:layout_marginTop="60dp"-->
<!--        android:background="@color/gray_1">-->

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/homeScrollComposeView"
        android:layout_width="wrap_content"
        android:layout_height="575dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
<!--    </ScrollView>-->

    <ImageButton
        android:id="@+id/imageAddBankBtn"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="640dp"
        android:backgroundTint="@color/white"
        android:scaleType="centerInside"
        android:src="@drawable/bank_account" />

    <androidx.cardview.widget.CardView
        android:id="@+id/addBankCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/gray_1"
        android:visibility="gone">

        <View
            android:id="@+id/addBankView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/imageArrowBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="17dp"
            android:background="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/addBank"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="16dp"
            android:text="Add Bank"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="325dp"
            android:layout_height="480dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/rounded_corner_background"
            android:backgroundTint="@color/white" />

        <ImageView
            android:id="@+id/addImageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="155dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/circle_background"
            android:scaleType="centerInside"
            android:src="@drawable/image" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="260dp"
            android:text="Name:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="250dp"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="330dp"
            android:text="Initial:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="320dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="400dp"
            android:text="Date:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="390dp"
            android:ems="10"
            android:inputType="date" />

        <Button
            android:id="@+id/addBankBtn"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="620dp"
            android:text="Add Bank" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="620dp"
            android:text="Cancel" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/selectBankIconCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <View
            android:id="@+id/selectIconView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/imageArrowBtnSelectIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="17dp"
            android:background="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/selectIcon"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="16dp"
            android:text="Select Bank Icon"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/iconScrollComposeView"
            android:layout_width="wrap_content"
            android:layout_height="575dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/editCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/gray_1"
        android:visibility="visible">
        <View
            android:id="@+id/editBankView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/imageArrowBtnEdit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="17dp"
            android:background="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/editBank"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="16dp"
            android:text="Add Bank"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

</FrameLayout>